{
    "manifest_version": 3,
    "name": "QR Code Generator",
    "version": "1.0",
    "description": "Creates a QR Code for the current open website",
    "content_scripts": [
        {
            "matches": [
                "https://*/*"
            ],
            "css": [
                "src/style.css"
            ],
            "js": [
                "src/index.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup/popup.html"
    },
    "permissions": ["tabs"]
}